<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookingAppHotel" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Créer composant titre par défault login-->
    <style name="TitleTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <!-- Créer composant sous texte par défault login-->
    <style name="TextStyle" parent="TitleTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Créer composant créer un compte par défault login-->
    <style name="CreateAccoutTextStyle" parent="TitleTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Créer composant titre par défault search-->
    <style name="TitleTextStyleSearch">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <!-- Créer composant sous texte par défault search-->
    <style name="TextStyleSearch" parent="TitleTextStyleSearch">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Créer composant sous texte pour button search -->
    <style name="TextStyleSearchButton" parent="TextStyleSearch">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyleSearchElement" parent="TextStyleSearchButton">
        <item name="android:fontFamily">@font/raleway</item>
    </style>


    <!-- Lise hotel élément -->
    <style name="TextStyleNameHotel">
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>
    <style name="TextStyleHotelPresentation" parent="TextStyleNameHotel">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextStyleTarif" parent="TextStyleHotelPresentation">
        <item name="android:textSize">30sp</item>
    </style>


</resources>